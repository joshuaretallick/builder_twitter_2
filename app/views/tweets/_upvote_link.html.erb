<%= content_tag "div", id: "upvote-#{tweet.id}" do %>
  <%= link_to upvote_tweet_path(tweet), method: :patch, remote: true, data: { disable_with: "voting..." } do %>
    <% if current_user.voted_up_on? tweet %>
      <i class="fa fa-thumbs-up" style="color: green;"></i>
      unlike
    <% else %>
      <i class="fa fa-thumbs-up"></i>
      like
    <% end %>
  <% end %>
<% end %>
