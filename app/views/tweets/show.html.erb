<div class="row">
  <div class="col-md-9">
    <%= image_tag(@tweet.picture_url, width: '100%') if @tweet.picture.present? %>
  </div>
  <div class="col-md-3">
    <p><b>Content: </b><%= @tweet.content %></p>
    <p>
      <%= link_to 'Edit', edit_tweet_path(@tweet) %> |
      <%= link_to 'Destroy', @tweet, data: { confirm: 'Are you sure?' }, method: :delete %> |
      <%= link_to 'Back', tweets_path %>
    </p>
  </div>
</div>
